{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "modules": true
        },
        "sourceType": "module"
    },
    "plugins": ["react", "react-hooks"],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "rules": {
        "no-undef": 1,
        "indent": [ 2, 2, { "SwitchCase": 1 } ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": 0,
        "comma-dangle": 0,
        "no-case-declarations": 0,
        "react/jsx-uses-vars": 0,
        "react/jsx-indent" : [
            "error",
            2
        ],
        "no-extend-native": 0,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0,
        "react/display-name": 1,
        "react/no-unescaped-entities": 0,
        "react-hooks/rules-of-hooks": "warn",
        "react-hooks/exhaustive-deps": "warn"
    }
  }
